@{
    ViewData["Title"] = "Verificador de Senha";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="p-4 rounded shadow bg-white" style="max-width: 500px; width: 100%;">
        <h2 class="mb-4 text-center fw-bold">
            Verificador de Senha
        </h2>

        <div class="mb-3 position-relative">
            <input type="password" id="senha" class="form-control form-control-lg" placeholder="Digite sua senha" autocomplete="off">
            <button type="button" id="toggleSenha" class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2">
                <i class="bi bi-eye"></i>
            </button>
        </div>

        <ul id="criterios-list" class="list-group mb-3"></ul>

        <div id="status" class="alert alert-secondary text-center">
            Digite uma senha
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
@section Scripts {
    <script>
        document.getElementById("toggleSenha").addEventListener("click", function () {
            const input = document.getElementById("senha");
            const icon = this.querySelector("i");
            const isPassword = input.type === "password";

            input.type = isPassword ? "text" : "password";
            
            icon.classList.toggle("bi-eye", !isPassword);
            icon.classList.toggle("bi-eye-slash", isPassword);
        });
        document.getElementById("senha").addEventListener("input", function () {
            const senha = this.value;

            fetch('@Url.Action("Verificar", "Senha")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8'
                },
                body: new URLSearchParams({ senha: senha })
            })
                .then(response => response.json())
                .then(data => {
                    const criteriosList = document.getElementById("criterios-list");
                    criteriosList.innerHTML = "";

                    data.criterios.forEach(c => {
                        const icon = c.atendido ? "✅" : "❌";
                        const color = c.atendido ? "list-group-item-success" : "list-group-item-danger";

                        criteriosList.insertAdjacentHTML(
                            "beforeend",
                            `<li class="list-group-item d-flex align-items-center ${color}">
                        <span class="me-2 fs-5">${icon}</span> ${c.descricao}
                    </li>`
                        );
                    });

                    const status = document.getElementById("status");
                    if (data.essencial) {
                        status.className = "alert alert-success text-center fw-bold";
                        status.textContent = "Senha essencial!";
                    } else {
                        status.className = "alert alert-danger text-center fw-bold";
                        status.textContent = "Senha não atende todos os requisitos";
                    }
                });
        });
    </script>
}

}
