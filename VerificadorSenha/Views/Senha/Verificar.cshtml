@{
    ViewData["Title"] = "Verificador de Senha";
}

<div class="container mt-5">
    <h2 class="mb-4">Verificador de Senha</h2>

    <input type="password" id="senha" class="form-control mb-3" placeholder="Digite sua senha">
    
    <ul id="criterios-list" class="list-unstyled"></ul>

    <div id="status" class="alert alert-secondary">Digite uma senha</div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#senha").on("input", function () {
            var senha = $(this).val();

            $.ajax({
                url: '@Url.Action("Verificar", "Senha")', 
                type: 'POST',
                data: { senha: senha },
                success: function (data) {
                    $("#criterios-list").empty();

                    data.criterios.forEach(function (c) {
                        var icon = c.atendido? "✅" : "❌";
                        var color = c.atendido ? "text-success" : "text-danger";

                        $("#criterios-list").append(
                            `<li class="${color}">${icon} ${c.descricao}</li>`
                        );
                    });

                    if (data.essencial) {
                        $("#status")
                            .removeClass()
                            .addClass("alert alert-success")
                            .text("Senha Essencial!");
                    } else {
                        $("#status")
                            .removeClass()
                            .addClass("alert alert-danger")
                            .text("Senha não atende todos os critérios");
                    }
                }
            });
        });
    </script>
}