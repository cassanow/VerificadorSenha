@{
    ViewBag.Title = "Verificar Senha";
    Layout = "_Layout";
}

<h2>Verificar Senha</h2>

<form id="passwordForm" asp-action="Verificar" asp-controller="Senha" method="post">
    <div class="mb-3">
        <label for="password" class="form-label">Digite a senha:</label>
        <input type="password" class="form-control" id="password" required />
    </div>
    <button type="submit" class="btn btn-primary">Verificar</button>
</form>

<div id="result" class="mt-3"></div>

@section Scripts {
    <script>
        document.getElementById("passwordForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const senha = document.getElementById("password").value;

            const response = await fetch("/Senha/Verificar", { // ajuste essa rota conforme seu controller
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ senha })
            });

            if (response.ok) {
                const data = await response.json();
                document.getElementById("result").innerHTML = 
                    data.essencial 
                    ? `<span class="text-success">✅ A senha é essencial</span>` 
                    : `<span class="text-danger">❌ A senha não é essencial</span>`;
            } else {
                document.getElementById("result").innerHTML = `<span class="text-warning">Erro ao verificar a senha.</span>`;
            }
        });
    </script>
}